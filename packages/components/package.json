{
  "name": "@hikmaui/components",
  "version": "0.4.0",
  "description": "React components for HikmaUI - zero external dependencies except React. 5 production-ready components: Button, Input, Card, Badge, Checkbox",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./lib/*": {
      "import": "./dist/lib/*.mjs",
      "require": "./dist/lib/*.js",
      "types": "./dist/lib/*.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm",
    "dev": "tsup src/index.ts --format cjs,esm --watch",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "hikmaui",
    "react",
    "components",
    "ui",
    "design-system"
  ],
  "author": "HikmaUI Team",
  "license": "MIT",
  "dependencies": {
    "@hikmaui/core": "workspace:*"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  }
}
