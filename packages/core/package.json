{
  "name": "@hikmaui/core",
  "version": "0.3.0",
  "description": "HikmaUI core utilities, JIT compiler, and zero-dependency component utilities. True zero dependencies with optional performance enhancements (fast-glob, chokidar).",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm",
    "dev": "tsup src/index.ts --format cjs,esm --watch",
    "test": "vitest"
  },
  "keywords": [
    "hikmaui",
    "css",
    "jit",
    "compiler",
    "utilities"
  ],
  "author": "HikmaUI Team",
  "license": "MIT",
  "optionalDependencies": {
    "fast-glob": "^3.3.2",
    "chokidar": "^3.6.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.16",
    "jsdom": "^27.1.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.2.2"
  }
}
