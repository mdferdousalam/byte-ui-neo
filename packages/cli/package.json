{
  "name": "@hikmaui/cli",
  "version": "0.1.0",
  "description": "CLI tool for HikmaUI - init, add components, and more",
  "main": "dist/index.js",
  "bin": {
    "hikma": "./dist/cli.js"
  },
  "files": [
    "dist",
    "templates"
  ],
  "scripts": {
    "build": "tsup src/cli.ts src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/cli.ts src/index.ts --format cjs,esm --dts --watch"
  },
  "keywords": [
    "hikmaui",
    "cli",
    "components"
  ],
  "author": "HikmaUI Team",
  "license": "MIT",
  "dependencies": {
    "@hikmaui/core": "workspace:*",
    "commander": "^12.0.0",
    "prompts": "^2.4.2",
    "picocolors": "^1.0.0",
    "ora": "^8.0.1",
    "execa": "^8.0.1",
    "fs-extra": "^11.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.16",
    "@types/prompts": "^2.4.9",
    "@types/fs-extra": "^11.0.4",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  }
}
